<div class="section">
    <div class="container">
        <div class="columns is-centered">
        
        <div class="column is-5">
        
        <% if @user.errors.any? %>
            <div id="error_explanation">
                <h5 class="has-text-danger"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being registered:</h5>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li class="has-text-danger"> * <%= msg %></li>    
                  <% end %>
                </ul>
             </div>
        <% end %>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        

        <h1 class="title">Edit <%= resource_name.to_s.humanize %></h1>
        
        <div class="field">
            <div class="control">
               <p class="has-text-weight-bold">Profile Photo</p>
                <%= f.file_field :avatar,
                required: false,
                autofocus: true,
                input_html: { class:"input" }, wrapper:false,label_html: { class:"label"} %>
            </div>        
        </div>
        
        <div class="field">
            <div class="control">
               <p class="has-text-weight-bold">User Description *Optional</p>
                <%= f.input :description,
                hint: "Limit to 280 words",
                autofocus: true,
                input_html: { class:"input" }, wrapper:false,label_html: { class:"label"} %>
            </div>        
        </div>
        
        <div class="field">
            <div class="control">
                <%= f.input :username,
                required: false,
                autofocus: true,
                input_html: { class:"input" }, wrapper:false,label_html: { class:"label"} %>
            </div>        
        </div>
        
        <div class="field">
            <div class="control">
                <%= f.input :name,
                required: false,
                autofocus: true,
                input_html: { class:"input" }, wrapper:false,label_html: { class:"label"} %>
            </div>        
        </div>

        <div class="field">
            <div class="control">
                <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { class:"input" }, wrapper:false,label_html: { class:"label"} %>
            </div>        
        </div>
        
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        
        
        <div class="field">
            <div class="control">
                <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
            </div>        
        </div>
        
        <div class="field">
            <div class="control">
                <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
            </div>        
        </div>
        
        <div class="field">
            <div class="control">
                <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
            </div>        
        </div>

        <div class="field">
            <div class="control">
            <%= f.button :submit, "Update", class:"button is-small is-info" %>
            </div>
            
        </div>
        <% end %>
        
        
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
        </div>
        </div>
    </div>
</div>
