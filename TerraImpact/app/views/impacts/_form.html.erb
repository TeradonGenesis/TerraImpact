<%= simple_form_for(@impact) do |f| %>
  <% f.error_notification %>
    <div class="field">
        <div class="control">
            <%= f.input :impact, label: "Show your impact!", input_html: {class: "textarea"}, wrapper:false, label_html: {class: "label"}, placeholder: "Create a new impact" %>
        </div>
        <br/>
        <div class="control ">
            <p><%= f.input :category, label: "Choose a category", :collection => ['Technology', 'Science', 'Politics', 'Anime', 'Games', 'Others'],  wrapper:false, label_html: {class: "label"}, placeholder: "Chhose a category" %></p>
        </div>
    </div>
    <div class="control has-margin-top-4">
    <%= f.button :submit, class: "button is-info" %>
    </div>
<% end %>
