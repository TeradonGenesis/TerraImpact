<div class="column tabs is-boxed is-fullwidth is-large">
    <ul>
      <li class="is-active"><a>Feed</a></li>
      <li><a>Impacts</a></li>
    </ul>
  </div>
  <div class="column is-12 tabs-content">
    <div class="tab-content is-active">
          <% @impacts.each do |impact| %>
              <div class="box">
                  <article class="media">
                      <div class="media-left">
                          <figure class="is-64x64 image">
                                <% if impact.user.avatar.attached? %>
                                    <%= link_to image_tag(impact.user.avatar, class: "profile-img"), user_path(impact.user), class: "colorbox" %>
                                <% else %>
                                    <%= link_to gravatar_image_tag(impact.user.email, size: 64, alt: impact.user.name), user_path(impact.user), class: "colorbox" %>
                                <% end %>
                          </figure>
                      </div>
                      <div class="media-content">
                          <div class="content">
                              <p><strong><%= link_to impact.user.name , user_path(impact.user) %></strong> <span class="has-text-weight-light">@<%= impact.user.username if impact.user %>  </span>&nbsp;<span class="has-text-grey-light"><i class="far fa-calendar"></i><%= impact.created_at.strftime("%d %b %Y") %></span></p>

                              <p><%= impact.impact %></p>
                                <br>
                              <p class="has-text-grey-light"><i class="fas fa-tags"></i> <%= impact.category %></p>
                          </div>
                          <% if user_signed_in? && (current_user.id == impact.user_id || current_user.admin?) %>
                              <div class="level">
                                  <div class="is-mobile level-left">
                                      <%= link_to impact, class: "level-item" do %>
                                          <span class="icon"><i class="fas fa-link"></i></span>
                                      <% end %>
                                      <%= link_to edit_impact_path(impact), class: "level-item" do %>
                                          <span class="icon"><i class="fas fa-pencil-alt"></i></span>
                                      <% end %>
                                      <%= link_to impact, method: :delete, data: {confirm: "Do you want to delete this item?"} do %>
                                          <span class="icon"><i class="fas fa-trash"></i></span>
                                      <% end %>
                                  </div>
                              </div>
                          <% end %>
                      </div>
                  </article>
              </div>
        <% end %>
    </div>
    <div class="tab-content">
          <% current_user.impacts.each do |impact| %>
                  <div class="box">
                      <article class="media">
                          <div class="media-left">
                              <figure class="is-64x64 image">
                                    <% if impact.user.avatar.attached? %>
                                        <%= link_to image_tag(impact.user.avatar, class: "profile-img"), user_path(impact.user), class: "colorbox" %>
                                    <% else %>
                                        <%= link_to gravatar_image_tag(impact.user.email, size: 64, alt: impact.user.name), user_path(impact.user), class: "colorbox" %>
                                    <% end %>
                              </figure>
                          </div>
                          <div class="media-content">
                              <div class="content">
                                  <p><strong><%= impact.user.name if impact.user %></strong> <span class="has-text-weight-light">@<%= impact.user.username if impact.user %>  </span>&nbsp;<span class="has-text-grey-light"><i class="far fa-calendar"></i><%= impact.created_at.strftime("%d %b %Y") %></span></p>

                                  <p><%= impact.impact %></p>
                                    <br>
                                  <p class="has-text-grey-light"><i class="fas fa-tags"></i> <%= impact.category %></p>
                              </div>
                              <% if user_signed_in? && (current_user.id == impact.user_id || current_user.admin?) %>
                                  <div class="level">
                                      <div class="is-mobile level-left">
                                          <%= link_to impact, class: "level-item" do %>
                                              <span class="icon"><i class="fas fa-link"></i></span>
                                          <% end %>
                                          <%= link_to edit_impact_path(impact), class: "level-item" do %>
                                              <span class="icon"><i class="fas fa-pencil-alt"></i></span>
                                          <% end %>
                                          <%= link_to impact, method: :delete, data: {confirm: "Do you want to delete this item?"} do %>
                                              <span class="icon"><i class="fas fa-trash"></i></span>
                                          <% end %>
                                      </div>
                                  </div>
                              <% end %>
                          </div>
                      </article>
                  </div>
        <% end %>
    </div>
  </div>

