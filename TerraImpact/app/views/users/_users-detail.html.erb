<div class="section">
    <div class="columns is-centered">
        <div class="column is-10">
         <div class="add-user">
              <%= link_to new_user_path, class: "button is-info" do %>
                  <span><i class="fas fa-plus"></i>  Create New User</span>
              <% end %>
          </div>
          <br/>
          <div class="tabs is-boxed is-fullwidth is-large">
              <ul>
                  <li class="is-active"><a>Normal Users</a></li>
                  <li><a>Admins</a></li>
              </ul>
          </div>
          <div class="tabs-content">
              <div class="tab-content is-active">
                   <table class="table">
                        <thead>
                        <tr>
                          <th><abbr title="ID">ID</abbr></th>
                          <th><abbr title="Avatar">Avatar</abbr></th>
                          <th><abbr title="Name">Name</abbr></th>
                          <th><abbr title="Username">Username</abbr></th>
                          <th><abbr title="Email">Email</abbr></th>
                          <th><abbr title="Description">Description</abbr></th>
                          <th><abbr title="Action" class="is-centered">Action</abbr></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @normal_users.each do |user| %>
                            <tr>
                            <th><%= user.id %></th>
                            <td>
                                <figure class="image is-48x48">
                                <% if user.avatar.attached? %>
                                    <%= link_to image_tag(user.avatar, class: "profile-img"), user_path(user), class: "colorbox" %>
                                <% else %>
                                    <%= link_to gravatar_image_tag(user.email, size: 64, alt: user.name), user_path(user), class: "colorbox" %>
                                <% end %>
                                </figure>
                            </td>
                            <td><%= link_to user.name, user %></td>
                            <td>@<%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.description %></td>
                            <td>
                               <div class="level">
                                    <%= link_to user, class: "level-item" do %>
                                        <span class="icon"><i class="fas fa-link"></i></span>
                                    <% end %>
                                    <%= link_to edit_user_path(user), class: "level-item" do %>
                                        <span class="icon"><i class="fas fa-pencil-alt"></i></span>
                                    <% end %>
                                    <%= link_to user, method: :delete, data: {confirm: "Do you want to delete this item?"}, class: "level-item" do %>
                                        <span class="icon"><i class="fas fa-trash"></i></span>
                                    <% end %>
                                </div>
                            </td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
                <div class="tab-content">
                   <table class="table">
                        <thead>
                        <tr>
                          <th><abbr title="ID">ID</abbr></th>
                          <th><abbr title="Avatar">Avatar</abbr></th>
                          <th><abbr title="Name">Name</abbr></th>
                          <th><abbr title="Username">Username</abbr></th>
                          <th><abbr title="Email">Email</abbr></th>
                          <th><abbr title="Description">Description</abbr></th>
                          
                        </tr>
                        </thead>
                        <tbody>
                        <% @admins.each do |admin| %>
                            <tr>
                            <th><%= admin.id %></th>
                            <td>
                                <figure class="image is-48x48">
                                <% if admin.avatar.attached? %>
                                    <%= link_to image_tag(admin.avatar, class: "profile-img"), user_path(admin), class: "colorbox" %>
                                <% else %>
                                    <%= link_to gravatar_image_tag(admin.email, size: 64, alt: admin.name), user_path(admin), class: "colorbox" %>
                                <% end %>
                                </figure>
                            </td>
                            <td><%= link_to admin.name, admin %></td>
                            <td>@<%= admin.username %></td>
                            <td><%= admin.email %></td>
                            <td><%= admin.description %></td>
                            
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>